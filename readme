Provisioner:-
	resource "null_resource" "mk" {			    	}
  provisioner "local-exec" {					      }- creates status.txt and updates with 0 when terraform apply
    command = "echo '0' > status.txt"				}
  }
  provisioner "local-exec" {					      }
    when    = destroy						            }- changes status.txt when terraform destroy is given
    command = "echo '1' > status.txt"				}
  }
}
